<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.checkoutController">
   <children>
      <AnchorPane prefHeight="714.0" prefWidth="600.0">
         <children>
            <Label layoutX="267.0" layoutY="51.0" text="Checkout">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <TextField fx:id="cardNoField" layoutX="206.0" layoutY="369.0" prefHeight="25.0" prefWidth="359.0" />
            <TextField fx:id="expiryDateField" layoutX="206.0" layoutY="419.0" prefHeight="25.0" prefWidth="359.0" />
            <TextField fx:id="CVVField" layoutX="206.0" layoutY="468.0" prefHeight="25.0" prefWidth="359.0" />
            <Label layoutX="43.0" layoutY="371.0" text="Card Number (16 digits)">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label layoutX="66.0" layoutY="421.0" text="Expiry Date (MM/YY)">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label layoutX="112.0" layoutY="471.0" text="CVV (3 digits)">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="confirmpaymentButton" layoutX="457.0" layoutY="563.0" mnemonicParsing="false" onAction="#handleConfirmpaymentButton" prefHeight="42.0" prefWidth="108.0" text="Confirm Payment" />
            <Label fx:id="warningLabel" layoutX="37.0" layoutY="518.0" prefHeight="22.0" prefWidth="527.0" textFill="RED">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
            <Hyperlink fx:id="backtoshoppingcartLink" layoutX="37.0" layoutY="50.0" onAction="#handleBackToShoppingCartLink" text="Back to Cart" />
            <TableView fx:id="CheckoutTable" layoutX="37.0" layoutY="91.0" prefHeight="211.0" prefWidth="527.0">
               <columns>
                  <TableColumn fx:id="CheckoutBookTitleColumn" prefWidth="228.0" text="Book Title" />
                  <TableColumn fx:id="CheckoutAuthorTitleColumn" prefWidth="115.0" text="Author" />
                  <TableColumn fx:id="CheckoutBookQuantityColumn" prefWidth="112.0" text="Quantity" />
                  <TableColumn fx:id="CheckoutPricePerBookColumn" prefWidth="71.0" text="Price" />
               </columns>
            </TableView>
         </children>
      </AnchorPane>
   </children>
</HBox>
