<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.browseBooksController">
   <children>
      <AnchorPane prefHeight="765.0" prefWidth="606.0">
         <children>
            <Button fx:id="AddtoCartButton" layoutX="466.0" layoutY="341.0" mnemonicParsing="false" onAction="#handleAddToCart" text="Add Book to Cart" />
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="230.0" layoutY="21.0" prefHeight="34.0" prefWidth="147.0" text="Library Books" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Hyperlink fx:id="dashboardpageLink" layoutX="41.0" layoutY="27.0" onAction="#handledashboardHyperLink" text="Back to Dashboard" />
            <Button fx:id="paymentButton" layoutX="491.0" layoutY="673.0" mnemonicParsing="false" onAction="#handleCheckout" prefHeight="25.0" prefWidth="83.0" text="Payment" />
            <TableView fx:id="bookList" layoutX="34.0" layoutY="64.0" prefHeight="261.0" prefWidth="542.0">
              <columns>
                  <TableColumn fx:id="bookTitleColumn" prefWidth="228.0" text="Book Title" />
                  <TableColumn fx:id="bookAuthorColumn" prefWidth="115.0" text="Author" />
                  <TableColumn fx:id="AvailableCopiesColumn" prefWidth="112.0" text="Available Copies" />
                  <TableColumn fx:id="PriceColumn" prefWidth="86.0" text="Price" />
              </columns>
            </TableView>
            <TableView fx:id="shoppingCartTable" layoutX="32.0" layoutY="424.0" prefHeight="211.0" prefWidth="542.0">
               <columns>
                  <TableColumn fx:id="CartBookTitleColumn" prefWidth="228.0" text="Book Title" />
                  <TableColumn fx:id="CartAuthorTitleColumn" prefWidth="115.0" text="Author" />
                  <TableColumn fx:id="CartBookQuantityPurchasedColumn" prefWidth="112.0" text="Quantity" />
                  <TableColumn fx:id="CartbookPriceColumn" prefWidth="86.0" text="Price" />
               </columns>
            </TableView>
            <Button fx:id="removebookButton" layoutX="32.0" layoutY="673.0" mnemonicParsing="false" onAction="#handleRemoveBook" prefHeight="25.0" prefWidth="104.0" text="Remove Book" />
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="232.0" layoutY="383.0" prefHeight="34.0" prefWidth="147.0" text="Shopping Cart" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</HBox>
